	   	{
	   	 String sql1 = "INSERT INTO Patient_clinique(patient_Id,clinique_id) VALUES("
					+ patient.getPatientId() + ",'" + patient.getCliniqueId().get(i)+ "')";
					
	   	 System.out.println("SSQL"+sql1);
